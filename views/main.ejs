<!DOCTYPE html>
<html lang="ja">
    <head>
        <title>TODOリスト</title>
        <%-include('./header')%>
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
    <div id="wrap">
        <article>
        <h1>TODOリスト</h1>
        <section>
        <div class="must">
            <h3>しないといけないこと</h3>
            <div class="list">
            <% for(let item of m){ %>
                <input class="must-content" type="checkbox"><div draggable="true"><%= item %></div>
            <% } %>
            </div>
        </div>
        </section>

        <section>
        <div class="want">
            <h3>やりたいこと</h3>
            <div class="list">
            <% for(let item of w){ %>
                <input class="want-content" type="checkbox"><div draggable="true"><%= item %></div>
            <% } %>
            </div>
        </div>
        </section>

        <section>
        <div class="eventually">
            <h3>そのうちすること</h3>
            <div class="list">
            <% for(let item of e){ %>
                <input class="eventually-content" type="checkbox"><div class="hoge" draggable="true"><%= item %></div>
            <% } %>
            </div>
        </div>
        </section>
        </article>
    </div>
    </body>
</html>